{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["ES2020"]
  },
  "exclude": [
    "test/**/*.ts",
    "dist/**/*.ts"
  ]
}